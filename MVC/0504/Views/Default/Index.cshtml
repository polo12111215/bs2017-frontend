
@{
    ViewBag.Title = "Index";
}

@model   List<_0504.Models.Class1> 
<h2>Index</h2>
<div class="jumbotron">
    <p>
        <label>類別</label>
        <select name="YourLocation">
            <option value="" selected>請選擇</option>
            <option value="pay">支出</option>
            <option value="get">收入</option>
        </select>
    </p>
    <p><label>金額</label>   <input id="money" name="name" value="" /></p>
    <p><label>日期</label>   <input id="datatime" name="name" value="" /></p>
    <p><label>備註</label>   <input id="coment" name="name" value="" /></p>

    <p class="btn btn-primary btn-lg ">送出 &raquo;</p>

</div>
<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>類別</th>
            <th>日期</th>
            <th>金額</th>
            <th>備註</th>
        </tr>
    </thead>
    <tbody>
      
            @foreach (var item in Model)
            {
            <tr>

                <td>@item.number</td>
                <td>@item.choose</td>
                <td>@item.datatime</td>
                <td>@item.money</td>
                <td>@item.coment</td>
            </tr>
                }
            


    </tbody>
</table>
